{
  "$schema": "https://json.schemastore.org/tsconfig.json",
  "compilerOptions": {
    "lib": ["ES2023"],
    "outDir": "dist",
    "module": "NodeNext",
    "target": "ES2022",
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "noImplicitAny": false
  },
  "include": ["src"]
}
